{
  "name": "@binspire/api",
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./rpc": {
      "import": "./dist/features/rpc/index.js",
      "types": "./dist/features/rpc/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "bun --watch run src/index.ts && tsc --watch",
    "prod": "bun run dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@binspire/config": "workspace:*",
    "@binspire/db": "workspace:*",
    "@binspire/eslint": "workspace:*",
    "@binspire/logging": "workspace:*",
    "@binspire/tsconfig": "workspace:*",
    "@hono/zod-validator": "^0.7.3",
    "better-auth": "^1.3.26",
    "firebase-admin": "^13.5.0",
    "hono": "^4.9.10",
    "http-status-codes": "^2.3.0",
    "jose": "^6.1.0",
    "nanoid": "^5.1.6",
    "resend": "^6.1.2",
    "tsc-alias": "^1.8.16"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/nodemailer": "^7.0.2",
    "eslint": "^9.37.0"
  },
  "peerDependencies": {
    "drizzle-orm": "^0.44.6"
  }
}
